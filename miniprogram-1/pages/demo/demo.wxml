<swiper class="banner" indicator-dots indicator-color="rgba(255, 255, 255, 0.5)" indicator-active-color="#fff" autoplay
  interval="2000" circular previous-margin="20" next-margin="20">
  <swiper-item class="bannerItem">
    <image src="/images/img1.jpg"></image>
  </swiper-item>
  <swiper-item class="bannerItem">
    <image src="/images/img2.png"></image>
  </swiper-item>
  <swiper-item class="bannerItem">
    <image src="/images/img3.png"></image>
  </swiper-item>
</swiper>

<view class="out">
  <button class="button1" type="primary">登录</button>
  <button class="button1" plain>退出</button>
  <button class="button1" type="primary" size="mini">支付</button>
  <button class="button1" type="primary" loading>登陆中</button>
  <button class="button1" type="primary" open-type="contact">联系客服</button>

  <form bindsubmit="onSubmit">
    <input class="ipt" placeholder="请输入用户名" placeholder-class="iptPlace" auto-focus cursor-spacing="100"></input>
    <switch checked></switch>
    <button form-type="submit">提交</button>
  </form>

  <view style="padding: 50px; text-align: center">
    <icon type="success" size="100"></icon>
    <view>提交成功!</view>
  </view>

</view>

<view style="paddding: 50px">
  <progress percent="60" show-info font-size="25" border-radius="25" activeColor="red" backgroundColor="blue" active>
  </progress>
</view>