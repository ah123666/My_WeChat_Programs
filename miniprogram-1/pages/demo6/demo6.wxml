<view class="out">
  <view class="row" wx:for="{{resData}}" wx:key="index">
    <view class="pic">
      <image src="{{item.picurl}}"></image>
    </view>
    <view class="text">
      <view class="title">{{item.title}}</view>
      <view class="time">{{item.posttime}} - {{item.author}}</view>
    </view>
  </view>
  <view class="btnView">
    <button class="btn1" type="primary" bindtap="lastPage">上一页</button>
    <button class="btn2" type="primary" bindtap="nextPage">下一页</button>
  </view>
</view>